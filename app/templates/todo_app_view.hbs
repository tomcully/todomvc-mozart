<header id="header">
  <h1>{{i18n "todo.todos"}}</h1>
  {{view "Todo.TodoNewItemControl"}}
</header>

{{#view id="main" tag="section" displayObserveBinding="Todo.todoAppController.displayItems"}}
  {{view "Todo.CheckboxControl" id="toggle-all" valueObserveBinding="Todo.todoAppController.allChecked" checkAction="Todo.todoAppController.setCheckAll" typeHtml="checkbox"}}
 
  <label for="toggle-all">{{i18n "todo.markAllAsComplete"}}</label>

  {{collection "Todo.TodoItemView" collectionObserveBinding="Todo.todoAppController.items" id="todo-list" filterAttribute="completed" filterTextObserveBinding="Todo.todoAppController.completedfilter"}}
{{/view}}

<footer id="footer">
  <span id="todo-count">{{bindI18n "todo.itemCount" ITEMSObserveBinding="Todo.todoAppController.itemCount" tag='strong'}}</span>
  {{view "Todo.TodoFiltersView" modeObserveBinding="Todo.todoAppController.mode"}}
  {{view "Todo.TodoClearCompletedControl" valueObserveBinding="Todo.todoAppController.completedItemCount"}}
</footer>